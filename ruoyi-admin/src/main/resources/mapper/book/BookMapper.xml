<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.book.mapper.BookMapper">
    
    <resultMap type="Book" id="BookResult">
        <result property="id"    column="id"    />
        <result property="bookName"    column="book_name"    />
        <result property="cover"    column="cover"    />
        <result property="author"    column="author"    />
        <result property="publisher"    column="publisher"    />
        <result property="publishDate"    column="publish_date"    />
        <result property="price"    column="price"    />
        <result property="quantity"    column="quantity"    />
        <result property="regionId"    column="region_id"    />
        <result property="categoryId"    column="category_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBookVo">
        select id, book_name, cover, author, publisher, publish_date, price, quantity, region_id, category_id, create_time, update_time, create_by, update_by, remark from tb_book
    </sql>

    <select id="selectBookList" parameterType="Book" resultMap="BookResult">
        <include refid="selectBookVo"/>
        <where>  
            <if test="bookName != null  and bookName != ''"> and book_name like concat('%', #{bookName}, '%')</if>
            <if test="author != null  and author != ''"> and author = #{author}</if>
            <if test="publisher != null  and publisher != ''"> and publisher = #{publisher}</if>
            <if test="params.beginPublishDate != null and params.beginPublishDate != '' and params.endPublishDate != null and params.endPublishDate != ''"> and publish_date between #{params.beginPublishDate} and #{params.endPublishDate}</if>
            <if test="regionId != null "> and region_id = #{regionId}</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
        </where>
    </select>

    <select id="selectBookListAll" parameterType="Book" resultType="com.ruoyi.book.domain.vo.BookVo">


        select a.*, b.region_name, c.category_name
        from tb_book a left join tb_region b on a.region_id = b.id left join tb_category c on a.category_id = c.id
        <where>
            <if test="bookName != null  and bookName != ''"> and a.book_name like concat('%', #{bookName}, '%')</if>
            <if test="author != null  and author != ''"> and a.author = #{author}</if>
            <if test="publisher != null  and publisher != ''"> and a.publisher = #{publisher}</if>
            <if test="params.beginPublishDate != null and params.beginPublishDate != '' and params.endPublishDate != null and params.endPublishDate != ''"> and a.publish_date between #{params.beginPublishDate} and #{params.endPublishDate}</if>
            <if test="regionName != null "> and b.region_name like concat('%',#{regionName},'%') </if>
            <if test="categoryName != null "> and c.category_name like concat('%',#{categoryName},'%') </if>
        </where>

    </select>
    
    <select id="selectBookById" parameterType="Long" resultMap="BookResult">
        <include refid="selectBookVo"/>
        where id = #{id}
    </select>

    <insert id="insertBook" parameterType="Book" useGeneratedKeys="true" keyProperty="id">
        insert into tb_book
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookName != null and bookName != ''">book_name,</if>
            <if test="cover != null and cover != ''">cover,</if>
            <if test="author != null and author != ''">author,</if>
            <if test="publisher != null and publisher != ''">publisher,</if>
            <if test="publishDate != null">publish_date,</if>
            <if test="price != null">price,</if>
            <if test="quantity != null">quantity,</if>
            <if test="regionId != null">region_id,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookName != null and bookName != ''">#{bookName},</if>
            <if test="cover != null and cover != ''">#{cover},</if>
            <if test="author != null and author != ''">#{author},</if>
            <if test="publisher != null and publisher != ''">#{publisher},</if>
            <if test="publishDate != null">#{publishDate},</if>
            <if test="price != null">#{price},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="regionId != null">#{regionId},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBook" parameterType="Book">
        update tb_book
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookName != null and bookName != ''">book_name = #{bookName},</if>
            <if test="cover != null and cover != ''">cover = #{cover},</if>
            <if test="author != null and author != ''">author = #{author},</if>
            <if test="publisher != null and publisher != ''">publisher = #{publisher},</if>
            <if test="publishDate != null">publish_date = #{publishDate},</if>
            <if test="price != null">price = #{price},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="regionId != null">region_id = #{regionId},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBookById" parameterType="Long">
        delete from tb_book where id = #{id}
    </delete>

    <delete id="deleteBookByIds" parameterType="String">
        delete from tb_book where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>